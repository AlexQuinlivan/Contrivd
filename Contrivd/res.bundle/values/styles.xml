<?xml version="1.0" encoding="utf-8" ?>
<resources>
    
    <style name="text_base">
        <item name="font">MercuryTextG1-Roman</item>
    </style>
    
    <style name="text_title" parent="text_base">
        <item name="helium:text_size">@number/text_size_large</item>
    </style>
    
    <style name="text_paragraph" parent="text_base">
        <item name="helium:text_size">@number/text_size_paragraph</item>
    </style>
    
    <style name="text_subtext" parent="text_base">
        <item name="helium:text_size">@number/text_size_subtext</item>
        <item name="alpha">0.7</item>
    </style>
    
    <style name="text_light">
        <item name="text_color">@color/white</item>
    </style>
    
    <style name="text_dark">
        <item name="text_color">@color/black</item>
    </style>
    
    <style name="light_overlay_button">
        <item name="background_color">@color/transparent</item>
        <item name="helium:highlighted_background_color">@color/light_overlay_color</item>
    </style>
    
</resources>